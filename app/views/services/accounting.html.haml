- if flash[:notice]
  = render 'shared/success_notice'

%head
  %title Joynus Staffing | Services | We provide best solutions
  %meta{:content => "We have your best interest at heart", :name => "Description"}/
%body
  %section.feature-section.no-spacing
    .feature.animated.fadeIn
      .feature-container
        %img{ data: { interchange:"[#{asset_path('staff-bg-mobile.jpg')}, (small)], [#{asset_path('staff-bg-mobile.jpg')}, (medium)], [#{asset_path('staff-bg.jpg')}, (large)]" } }
        .feature-text
          %h1.text-center.animated.fadeInDown
            Right People Right Now
            

        
  
  %section
    .wrap
      
              
                
      .pageleft
        .row        
          .columns.large-12.text-center
      
            %h2.secondary-text.text-center
              Accounting & Finance
            %p
              In accounting and finance, accuracy and precision is most important
           
         
      .pageright
        .row
          .columns.large-10.large-offset-2
            %h2.text-center.secondary-text.no-margin-top= t 'contact.content-header'
            
        
        .form-section.no-spacing.mb--
          .row
            .columns.large-10.large-offset-2
              %fieldset.mb--
                = render 'contact/form'          
        
   
      