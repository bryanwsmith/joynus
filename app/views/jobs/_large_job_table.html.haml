.show-for-medium-up
  .row
    .columns.large-12
      %fieldset
        %form{ ng: { controller: 'jobCtrl' } }
          .row
            .columns.large-12
              .input-prepend
                %span.fa.fa-search
                %input.prepend.prepend-search.no-margin{type: 'text', placeholder: 'Search', ng: { model: 'searchJobs' } }

          .row
            .columns.large-12
              #jobs-header
                %table.no-margin
                  %thead
                    %tr
                      %th{ width: '20%' }= t 'jobs.company'
                      %th{ width: '30%' }= t 'jobs.title'
                      %th{ width: '20%' }= t 'jobs.location'
                      %th{ width: '15%' }= t 'jobs.language'
                      %th{ width: '15%' }= t 'jobs.date-posted'

          .row
            .columns.large-12
              #jobs-table.mb--
                - if @jobs.where.not(date_approved: nil).count != 0
                  %table.clickable-row.no-margin
                    %tbody
                      %tr{ ng: { repeat: "job in jobs  | filter:searchJobs | orderBy: ['featured', 'posted']", click: 'go(job.id)' } }
                        %td{ width: '20%' } {{ job.company }}
                        %td{ width: '30%' } {{ job.title }}
                        %td{ width: '20%' } {{ job.location }}
                        %td{ width: '15%' } {{ job.language }}
                        %td{ width: '15%' } {{ job.posted }}

                - else
                  .empty-table
                    %h1 No Jobs Currently Listed
                    %p
                      Check back later, or
                      = link_to 'contact us.', contact_index_path

          .row
            .columns.large-12
              .right
                %a.button.small.no-margin.no-hover{href: '#'} Sign In
                %button.button.submit.small.radius.no-margin Apply
