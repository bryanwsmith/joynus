= form_tag send_mail_path, 'data-abide' => '' do
  .row
    .columns.large-6
      = text_field_tag 'first_name', nil, 'required' => '', placeholder: 'First Name *'
    .columns.large-6
      = text_field_tag 'last_name', nil, 'required' => '', placeholder: 'Last Name *'

  .row
    .columns.large-7
      = email_field_tag 'email', nil, 'required' => '', placeholder: 'Email *'
    .columns.large-5
      = text_field_tag 'phone', nil, placeholder: 'Phone'

  .row
    .columns.large-12
      = select_tag 'subject', options_for_select(Contact::SUBJECTS, ''), include_blank: 'Subject'

  .row
    .columns.large-12
      = text_area_tag 'message', nil, placeholder: 'Message...', rows: 8
  .row
    .columns.large-12
      = submit_tag 'Submit', class: 'button submit small radius no-margin right'
