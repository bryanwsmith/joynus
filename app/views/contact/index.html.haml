    .columns.large-3.large-offset-1
      %h3.secondary-text.no-margin= t 'contact.helpful-resources'
    .columns.large-4
      %h5.primary-text.text-thin.no-margin.health-care
        %a{href: '#'}= t 'contact.healthcare'
    .columns.large-4
      %h5.primary-text.text-thin.no-margin.industrial-careers
        %a{href: '#'}= t 'contact.industrial-careers'
