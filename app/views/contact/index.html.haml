- if flash[:notice]
  = render 'shared/success_notice'

%section.feature-section.no-spacing
  .feature.animated.fadeIn
    %article.feature-static
      %img{ data: { interchange:"[#{asset_path('contact-bg-mobile.jpg')}, (small)], [#{asset_path('contact-bg.jpg')}, (medium)], [#{asset_path('contact-bg.jpg')}, (large)]" } }
    %article.feature-absolute
      %img{ data: { interchange:"[#{asset_path('contact-bg-mobile.jpg')}, (small)], [#{asset_path('contact-bg.jpg')}, (medium)], [#{asset_path('contact-bg.jpg')}, (large)]" } }
      .feature-text
        %h1.text-center= t 'contact.feature-header'

%section
  .row
    .columns.large-8.large-offset-2
      %h2.text-center.secondary-text.no-margin-top= t 'contact.content-header'
      %p.no-margin= t 'contact.content-text'

%section.form-section.no-spacing.mb--
  .row
    .columns.large-8.large-offset-2
      %fieldset.mb--
        = render 'form'

%section.light-color-bg
  .row
    .columns.large-12
      %h2.text-center.primary-text.mb--= t 'contact.office-locations'

  #locations
